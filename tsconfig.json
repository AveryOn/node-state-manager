{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "lib": ["es2022"],
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "baseUrl": ".",
        "paths": {
          "~/*": ["src/*"],
        //   "~core/*": ["src/core/*"],
        //   "~utils/*": ["src/utils/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}