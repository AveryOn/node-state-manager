{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "lib": ["es2022"],
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
    },
    "include": [
        "src/**/*.ts"
    ]
}